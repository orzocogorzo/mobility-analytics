HOST=localhost
DB=mobility
USER=orzo
PASSWORD=Contrasenya1992_
PORT=5432

if [ ! $2 ]; then
  echo "layer name not defined"
else
  LAYER=$2
  ogr2ogr -f PostgreSQL PG:"user=$USER dbname=$DB password=$PASSWORD" -nlt LINESTRING -nln $LAYER \
    -s_srs "EPSG:3857" -t_srs "EPSG:25831" -progress -overwrite -lco OVERWRITE=yes \
    -lco SCHEMA=public $1
fi